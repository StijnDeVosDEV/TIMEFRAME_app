                    <TextBlock x:Name="TextBlock_LogFile" Text="TextBlock" TextWrapping="Wrap"/>
                </ScrollViewer>
                <StackPanel x:Name="StackPanel_Style" Grid.Column="1" Margin="0,1,0,0">
                    <materialDesign:Card
                        Background="{DynamicResource MaterialDesignBackground}" Margin="5,5,5,5">
                        <StackPanel>
                            <Expander HorizontalAlignment="Stretch" Header="Main Theme" Cursor="Hand">
                                <StackPanel
                                Orientation="Horizontal"
                                TextBlock.Foreground="{DynamicResource MaterialDesignBody}"
                                Margin="24,8,24,16">
                                    <Label Content="Light"/>
                                    <ToggleButton Style="{StaticResource MaterialDesignSwitchToggleButton}" ToolTip="Default ToggleButton Style" Margin="10,0,10,0" Command="{Binding ApplyBaseTheme, Mode=OneWay}" CommandParameter="{Binding IsChecked, RelativeSource={RelativeSource Self}}" />
                                    <Label Content="Dark"/>
                                </StackPanel>
                            </Expander>
                        </StackPanel>
                    </materialDesign:Card>
                </StackPanel>
            </Grid>
            <Grid x:Name="Grid_Reports" Grid.Column="1">
