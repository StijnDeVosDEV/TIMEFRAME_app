        FontFamily="{DynamicResource MaterialDesignFont}"
        mc:Ignorable="d"
        Title="TIMEFRAME" Width="950" Height="650" WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <VIEWMODELS:VM_Main></VIEWMODELS:VM_Main>
    </Window.DataContext>
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Button.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.DialogHost.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <materialDesign:DrawerHost>
        <materialDesign:DrawerHost.RightDrawerContent>
            <Grid MinWidth="300" Margin="10,10,10,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,0,0,20">
                    <materialDesign:PackIcon Kind="User" Width="24" Height="24" Foreground="{DynamicResource PrimaryHueLightBrush}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    <TextBlock Foreground="{DynamicResource PrimaryHueLightBrush}" FontWeight="Bold" FontSize="16" Margin="10,0,0,0">Account Details</TextBlock>
                </StackPanel>
                
                <StackPanel MinWidth="100" Grid.Row="1">
                    <TextBlock FontWeight="Bold" Foreground="{DynamicResource PrimaryHueDarkBrush}" Margin="0,0,0,5">ID</TextBlock>
                    <TextBlock FontWeight="Bold" Foreground="{DynamicResource PrimaryHueDarkBrush}" Margin="0,0,0,5">Name</TextBlock>
                    <TextBlock FontWeight="Bold" Foreground="{DynamicResource PrimaryHueDarkBrush}" Margin="0,0,0,5">Email</TextBlock>
                    <TextBlock FontWeight="Bold" Foreground="{DynamicResource PrimaryHueDarkBrush}" Margin="0,0,0,5">Verified</TextBlock>
                </StackPanel>
                <StackPanel MinWidth="100" Grid.Column="1" Grid.Row="1">
                    <TextBlock Margin="0,0,0,5" Text="{Binding myUser.UserID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBlock>
                    <TextBlock Margin="0,0,0,5" Text="{Binding myUser.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBlock>
                    <TextBlock Margin="0,0,0,5" Text="{Binding myUser.Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBlock>
                    <TextBlock Margin="0,0,0,5" Text="{Binding myUser.EmailVerified, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBlock>
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="Button_Logout2" 
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                HorizontalAlignment="Center" 
                                Command="{Binding LogOut, Mode=OneWay}" Height="20" VerticalAlignment="Center" FontSize="10" Content="LOG OUT" Padding="4,2,4,2" Margin="0,0,10,0" Visibility="{Binding LogoutButtonVisibility}"/>
                        <Button Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}"
                                CommandParameter="{x:Static Dock.Right}"
                                Margin="4" HorizontalAlignment="Center"
                                Style="{DynamicResource MaterialDesignFlatButton}">
                            CLOSE
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Grid>
