                            <materialDesign:PackIcon x:Name="Icon_Style" Kind="StyleOutline" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                            <Label x:Name="Label_StyleButton" Content="Style" VerticalContentAlignment="Center" Style="{DynamicResource MaterialDesignLabel}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
                <Border x:Name="Border_SettingsMenu" BorderThickness="1" BorderBrush="Black" Width="1" HorizontalAlignment="Right"/>
