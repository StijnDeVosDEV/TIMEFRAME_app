                        <Label Content="Log file" VerticalContentAlignment="Center"/>
                    </StackPanel>
                    <Border x:Name="Border_StyleButton" BorderThickness="1" BorderBrush="{DynamicResource PrimaryHueDarkBrush}" Margin="0,10,0,0" CornerRadius="2,2,2,2">
